{
  "name": "vega-render-service",
  "version": "0.1.0",
  "description": "Service to render Vega charts",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "prestart": "npm run build",
    "vercel-build": "yum install gcc-c++ cairo-devel pango-devel libjpeg-turbo-devel giflib-devel libuuid-devel libmount-devel && cp /lib64/{libuuid,libmount,libblkid}.so.1 node_modules/canvas/build/Release/ && npm run build",
    "start": "node build/server.js",
    "test": "jest test/",
    "lint": "eslint .",
    "format": "eslint . --fix",
    "deploy": "vercel"
  },
  "private": true,
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.1",
    "canvas": "^2.9.0",
    "express": "^4.17.3",
    "vega": "^5.22.1",
    "vega-lite": "^5.2.0",
    "vega-schema-url-parser": "^2.2.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.11.0",
    "cors": "^2.8.5",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "27.5.1",
    "vercel": "^24.0.0",
    "prettier": "^2.5.1",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  }
}
