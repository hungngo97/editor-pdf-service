{
  "name": "vega-render-service",
  "version": "0.1.0",
  "description": "Service to render Vega charts",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "prestart": "npm run build",
    "vercel-build": "yum install gcc-c++ cairo-devel pango-devel libjpeg-turbo-devel giflib-devel libuuid-devel libmount-devel && cp /lib64/{libuuid,libmount,libblkid}.so.1 node_modules/canvas/build/Release/ && npm run build",
    "start": "node build/server.js",
    "test": "jest test/",
    "lint": "eslint .",
    "format": "eslint . --fix",
    "deploy": "vercel"
  },
  "private": true,
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "canvas": "^2.6.1",
    "express": "^4.17.1",
    "vega": "^5.17.0",
    "vega-lite": "^4.17.0",
    "vega-schema-url-parser": "^2.1.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.10",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.9.0",
    "cors": "^2.8.5",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.2.0",
    "jest": "26.6.3",
    "vercel": "^21.0.1",
    "prettier": "^2.2.1",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  }
}
