{
  "name": "vega-render-service",
  "version": "0.1.0",
  "description": "Service to render Vega charts",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "prestart": "npm run build",
    "vercel-build": "yum install gcc-c++ cairo-devel pango-devel libjpeg-turbo-devel giflib-devel libuuid-devel libmount-devel && cp /lib64/{libuuid,libmount,libblkid}.so.1 node_modules/canvas/build/Release/ && npm run build",
    "start": "node build/server.js",
    "test": "jest test/",
    "lint": "eslint .",
    "format": "eslint . --fix",
    "deploy": "vercel"
  },
  "private": true,
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "canvas": "^2.8.0",
    "express": "^4.17.2",
    "vega": "^5.21.0",
    "vega-lite": "^5.2.0",
    "vega-schema-url-parser": "^2.2.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.3",
    "@types/node": "^15.6.2",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "cors": "^2.8.5",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "26.6.3",
    "vercel": "^23.1.2",
    "prettier": "^2.5.1",
    "supertest": "^6.1.6",
    "ts-jest": "^26.5.6",
    "typescript": "^4.5.2"
  }
}
